<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.emrebicici.sakaryaotelleri.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/otelAdiDetayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Otel Adı"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/imageDetay1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:srcCompat="@mipmap/ic_launcher" />
        <TextView
            android:id="@+id/puanText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="Otel Puani:"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/otelPuaniDetayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="puan"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/aciklamaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="Açıklama:"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/otelIcerikDetayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="İçerik"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/numaraText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="Telefon:"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/otelTelefonDetayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Telefon"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/konumText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="Adres:"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/otelAdresDetayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Adres"
            android:textSize="24sp" />
        <ImageView
            android:id="@+id/imageDetay2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/imageDetay3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/imageDetay4"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>
</ScrollView>
