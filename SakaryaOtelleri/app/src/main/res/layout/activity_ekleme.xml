<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorPrimary"
    android:backgroundTintMode="src_over"
    tools:context="com.emrebicici.sakaryaotelleri.EklemeActivity">

    <EditText
        android:id="@+id/oteladiText"
        android:layout_width="221dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/back"
        android:ems="10"
        android:hint="Otel Adı"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/foto1View"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/back"
        android:onClick="fotoSecim"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@+id/oteladiText"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageView
        android:id="@+id/foto2View"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:background="@drawable/back"
        android:onClick="fotoSecim"
        app:layout_constraintLeft_toLeftOf="@+id/oteladiText"
        app:layout_constraintTop_toTopOf="@+id/foto1View"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageView
        android:id="@+id/foto3View"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:background="@drawable/back"
        android:onClick="fotoSecim"
        app:layout_constraintRight_toRightOf="@+id/oteladiText"
        app:layout_constraintTop_toTopOf="@+id/foto1View"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageView
        android:id="@+id/foto4View"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/back"
        android:onClick="fotoSecim"
        app:layout_constraintRight_toRightOf="@+id/oteladiText"
        app:layout_constraintTop_toTopOf="@+id/foto1View"
        app:srcCompat="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Foto Ekle:"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oteladiText" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:onClick="ekle"
        android:text="Ekle"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintRight_toRightOf="@+id/adresText"
        app:layout_constraintTop_toBottomOf="@+id/adresText" />

    <EditText
        android:id="@+id/icerikText"
        android:layout_width="221dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/back"
        android:ems="10"
        android:hint="             İçerik-multiline"
        android:inputType="textMultiLine"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foto3View" />

    <EditText
        android:id="@+id/telefonText"
        android:layout_width="221dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/back"
        android:ems="10"
        android:hint="Telefon"
        android:inputType="phone"
        android:textAlignment="center"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icerikText" />

    <EditText
        android:id="@+id/adresText"
        android:layout_width="221dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/back"
        android:ems="10"
        android:hint="Adres"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telefonText" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="69dp"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/back1"
        app:layout_constraintLeft_toLeftOf="@+id/adresText"
        app:layout_constraintTop_toBottomOf="@+id/adresText" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puan:"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/adresText"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/adresText" />


</android.support.constraint.ConstraintLayout>
